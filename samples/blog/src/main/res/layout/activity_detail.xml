<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.liferay.vulcan.consumer.screens.ThingScreenlet
        android:id="@+id/thing_screenlet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutId="@layout/blog_posting_detail_default"
        />

    <TextView
        android:id="@+id/headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thing_screenlet"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/creator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headline"
        android:layout_toLeftOf="@+id/know_more"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/know_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/creator"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/headline"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:text="Show more details..."
        />


</RelativeLayout>